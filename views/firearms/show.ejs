<%- include('../partials/header.ejs') %>

<h1><%= firearm.model %> - Details</h1>

<div class="show-page">
<table border="1" cellpadding="10" cellspacing="0">
  <tr>
    <th>Manufacturer</th>
    <td><%= firearm.manufacturer %></td>
  </tr>
  <tr>
    <th>Model</th>
    <td><%= firearm.model %></td>
  </tr>
  <tr>
    <th>Serial Number</th>
    <td><%= firearm.serialNumber || 'N/A' %></td>
  </tr>
  <tr>
    <th>Caliber</th>
    <td><%= firearm.caliber %></td>
  </tr>
  <tr>
    <th>Purchase Date</th>
    <td><%= firearm.purchaseDate ? firearm.purchaseDate.toLocaleDateString() : 'N/A' %></td>
  </tr>
  <tr>
    <th>Purchase Price</th>
    <td><%= firearm.purchasePrice != null ? '$' + firearm.purchasePrice.toFixed(2) : 'N/A' %></td>
  </tr>
  <tr>
    <th>Category</th>
    <td><%= firearm.category %></td>
  </tr>
  <tr>
    <th>Accessories</th>
    <td><%= firearm.accessories || 'N/A' %></td>
  </tr>
  <tr>
    <th>Notes</th>
    <td><%= firearm.notes || 'N/A' %></td>
  </tr>
  <tr>
    <th>Last Updated</th>
    <td><%= firearm.updatedAt ? firearm.updatedAt.toLocaleDateString() : 'N/A' %></td>
  </tr>
  <tr>
    <th>Added On</th>
    <td><%= firearm.createdAt.toLocaleDateString() %></td>
  </tr>
</table>
</div>

<div class="show-btns">
  <a href="/firearms/<%= firearm._id %>/edit" class="nav-btn">Edit Firearm</a>
  <form action="/firearms/<%= firearm._id %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit" class="nav-btn" onclick="return confirm('Are you sure you want to delete this firearm?');">Delete</button>
  </form>
  <a href="/firearms" class="nav-btn">Back to Inventory</a>
</div>

<%- include('../partials/footer.ejs') %>
